all:
	clear
	clear
	/home/e8newallm/OSDev/CrossCompiler/bin/x86_64-elf-g++ -o /home/e8newallm/OSDev/tmp/Kernel.o -c /home/e8newallm/OSDev/src/Kernel.cpp -ffreestanding --no-exceptions -fpermissive -std=c++11 -m64 -mno-red-zone -O2
	/home/e8newallm/OSDev/CrossCompiler/bin/x86_64-elf-as -o /home/e8newallm/OSDev/tmp/Stage2.o -c /home/e8newallm/OSDev/src/Stage2.s
	/home/e8newallm/OSDev/CrossCompiler/bin/x86_64-elf-as -o /home/e8newallm/OSDev/tmp/Interrupts.o -c /home/e8newallm/OSDev/src/Interrupts/Interrupts.s
	/home/e8newallm/OSDev/CrossCompiler/bin/x86_64-elf-ld -o /home/e8newallm/OSDev/tmp/Kernel.elf /home/e8newallm/OSDev/tmp/Stage2.o /home/e8newallm/OSDev/tmp/Interrupts.o /home/e8newallm/OSDev/tmp/Kernel.o -T /home/e8newallm/OSDev/src/Linker.lin
	/home/e8newallm/OSDev/CrossCompiler/bin/x86_64-elf-objcopy -O elf32-i386 /home/e8newallm/OSDev/tmp/Kernel.elf /mnt/OSDevMount/Kernel.elf

